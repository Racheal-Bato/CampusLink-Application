@* Admin Dashboard Layout: Light Theme + Sidebar + AOS *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CampusLink Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- AOS CSS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 240px;
            min-height: 100vh;
            background: #ffffff;
            border-right: 1px solid #e0e0e0;
            padding-top: 1rem;
        }

            .sidebar h4 {
                text-align: center;
                margin-bottom: 2rem;
                color: #007bff;
            }

            .sidebar a {
                padding: 12px 20px;
                display: block;
                color: #333;
                text-decoration: none;
                transition: all 0.2s ease;
            }

                .sidebar a:hover {
                    background: #e9f0ff;
                    color: #007bff;
                }

            .sidebar .active {
                background: #007bff;
                color: white;
                font-weight: 500;
            }

        .topbar {
            padding: 1rem;
            background: #ffffff;
            border-bottom: 1px solid #e0e0e0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .main-content {
            padding: 2rem;
        }

        .nav-item-icon {
            margin-right: 10px;
        }

        .profile {
            font-weight: 500;
            color: #333;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar shadow-sm">
            <h4>CampusLink</h4>

            <a asp-controller="Admin" asp-action="Index" class="@(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")">
                <i class="nav-item-icon bi bi-speedometer2"></i> Dashboard
            </a>


            <a asp-controller="Students" asp-action="List" class="@(ViewData["Title"]?.ToString() == "Students" ? "active" : "")">
                <i class="nav-item-icon bi bi-person-badge"></i> Students
            </a>

            <a asp-controller="Lecturer" asp-action="List" class="@(ViewData["Title"]?.ToString() == "Lecturers" ? "active" : "")">
                <i class="nav-item-icon bi bi-mortarboard"></i> Lecturers
            </a>

            <a asp-controller="Course" asp-action="List" class="@(ViewData["Title"]?.ToString() == "Courses" ? "active" : "")">
                <i class="nav-item-icon bi bi-journal-bookmark"></i> Courses
            </a>

            <a asp-controller="Department" asp-action="List" class="@(ViewData["Title"]?.ToString() == "Departments" ? "active" : "")">
                <i class="nav-item-icon bi bi-building"></i> Departments
            </a>

            <a asp-controller="Account" asp-action="Logout" class="text-danger mt-3">
                <i class="nav-item-icon bi bi-box-arrow-right"></i> Logout
            </a>
        </nav>

        <!-- Main Content Area -->
        <div class="flex-grow-1">
            <!-- Topbar -->
            <div class="topbar">
                <div class="h5 m-0">@ViewData["Title"]</div>
                <div class="profile">👤 Admin</div>
            </div>

            <!-- Page Content -->
            <div class="main-content" data-aos="fade-up">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 800 });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
