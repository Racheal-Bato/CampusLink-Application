@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}

@section Styles {
    <link href="~/css/homepage.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
   
    
}

<div class="hero-bg"></div>
<div class="hero-overlay"></div>

<div class="hero-content container text-center">
    <h1 data-aos="fade-up">Welcome to CampusLink</h1>
    <p data-aos="fade-up" data-aos-delay="200">
        Your one-stop portal for managing students, courses, lecturers, and departments with ease.
    </p>
    <div data-aos="zoom-in" data-aos-delay="400">
        <a asp-controller="Account" asp-action="LogIn" class="btn btn-lg btn-primary me-3">Log In</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-lg btn-outline-success">Sign Up</a>
    </div>
</div>

<svg class="bottom-wave" viewBox="0 0 1440 320">
    <path fill="#ffffff" fill-opacity="1"
          d="M0,128L48,160C96,192,192,256,288,272C384,288,480,256,576,213.3C672,171,768,117,864,122.7C960,128,1056,192,1152,197.3C1248,203,1344,149,1392,122.7L1440,96L1440,320L0,320Z">
    </path>
</svg>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
}
