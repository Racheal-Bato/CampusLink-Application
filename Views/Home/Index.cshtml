@{
    ViewData["Title"] = "Welcome to CampusLink";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            
            scroll-behavior: smooth;
        }

        .hero-section {
            background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('/images/campus-background.jpg') no-repeat center center/cover;
            color: white;
            height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .sticky-top {
            background: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .features-section i {
            font-size: 2rem;
            color: #0d6efd;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            transition: 0.3s ease-in-out;
        }

        footer {
            background: #212529;
            color: white;
            padding: 20px 0;
        }

    </style>
}

<!-- HERO SECTION -->
<section class="hero-section">
    <div class="container">
        <h1 class="display-4 fw-bold">Empowering Campuses Through Technology</h1>
        <p class="lead">Everything you need to manage your campus in one place.</p>
        <a href="#features" class="btn btn-lg btn-outline-light mt-3">Explore Features</a>
    </div>
</section>

<!-- FEATURES -->
<section id="features" class="features-section py-5">
    <div class="container">
        <div class="row text-center">
            <h2 class="mb-4 text-primary">Features</h2>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm p-4 feature-card">
                    <i class="fa-solid fa-book-open mb-3"></i>
                    <h5>Courses</h5>
                    <p>Browse available courses and detailed descriptions.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm p-4 feature-card">
                    <i class="fa-solid fa-users-gear mb-3"></i>
                    <h5>Departments</h5>
                    <p>Get to know the structure of academic departments.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm p-4 feature-card">
                    <i class="fa-solid fa-chalkboard-teacher mb-3"></i>
                    <h5>Lecturers</h5>
                    <p>Meet the lecturers and access their contact info.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ABOUT -->
<section id="about" class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="text-primary">About CampusLink</h2>
        <p class="lead">CampusLink is a digital platform designed to streamline campus administration and improve student engagement. From registration to notifications, we make every part of the campus experience easier and smarter.</p>
    </div>
</section>

<!-- NEWS -->
<section id="news" class="py-5">
    <div class="container">
        <h2 class="text-center text-primary mb-4">Campus News & Updates</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">New Courses Added</h5>
                        <p class="card-text">We’ve added 10+ new modern courses for the 2025 semester.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Open Day</h5>
                        <p class="card-text">Join us for the virtual open day this August! Meet lecturers and explore the platform.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CONTACT -->
<section id="contact" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center text-primary">Contact Us</h2>
        <form class="row g-3 mt-3">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Your Name" required />
            </div>
            <div class="col-md-6">
                <input type="email" class="form-control" placeholder="Your Email" required />
            </div>
            <div class="col-12">
                <textarea class="form-control" rows="4" placeholder="Your Message"></textarea>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary px-4">Send</button>
            </div>
        </form>
    </div>
</section>

<!-- FOOTER -->
<footer class="text-center">
    <p class="mb-0">&copy; 2025 CampusLink. All rights reserved.</p>
    <small>
        Follow us on
        <a href="#" class="text-white ms-1"><i class="fab fa-facebook"></i></a>
        <a href="#" class="text-white ms-1"><i class="fab fa-twitter"></i></a>
        <a href="#" class="text-white ms-1"><i class="fab fa-instagram"></i></a>
    </small>
</footer>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
