@model CampusLink_Application.Models.Department

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Register Department";
}

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow p-4 col-md-6">
        <h2 class="text-center text-primary mb-4">Register New Department</h2>

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="DepartmentName" class="form-label">Department Name</label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Register</button>
                <a asp-action="List" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

