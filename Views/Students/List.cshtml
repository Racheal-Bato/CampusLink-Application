@model List<CampusLink_Application.Models.Student>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Student List";
}

<h2 class="text-secondary mb-4">Registered Students</h2>

@if (!Model.Any())
{
    <p class="text-muted">No students registered yet.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>

                <th>Gender</th>
                <th>Age</th>
                <th>Date of Birth</th>
                <th>Registration Number</th>
                <th>Email Address</th>
                <th>Phone Number</th>
                <th>Course</th>
                <th>Department</th>
                <th>Profile Image</th>
                <th>Action</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>

                    <td>@student.Id</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Gender</td>
                    <td>@student.Age</td>
                    <td>@student.BirthDate</td>
                    <td>@student.RegNo</td>
                    <td>@student.EmailAdress</td>
                    <td>@student.PhoneNumber</td>
                    <td>@student.Course?.CourseName</td>
                    <td>@student.Department?.DepartmentName</td>

                    <td>
                        @if (student.ProfileImage != null)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(student.ProfileImage)" width="100" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }

                    <td>
                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<button type="button" onclick="window.location.href='/'" class="btn btn-danger ms-lg-5">Exit</button>
