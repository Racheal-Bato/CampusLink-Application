@model CampusLink_Application.Models.Student

@{
    ViewData["Title"] = "Register Student";
}

<h2 class="text-info text-center">Register New Student</h2>

<form asp-action="Register" method="post" class="mt-3" enctype="multipart/form-data>
    <div class="form-group">
        <label asp-for="ProfilePicture">Upload Profile Picture</label>
        <input asp-for="ProfilePicture" type="file" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" required class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" required class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label">Gender</label>
        <select asp-for="Gender" required class="form-select">
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" required class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="EmailAdress" class="form-label">Email Address</label>
        <input asp-for="EmailAdress" required class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" required class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="RegNo" class="form-label">Registration Number</label>
        <input asp-for="RegNo" required class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="BirthDate" class="form-label">Date Of Birth</label>
        <input asp-for="BirthDate" required class="form-control" type="date" />
        
    </div>

    <button type="submit" class="btn btn-primary ms-5">Add Student</button>
    <button type="button" onclick="window.location.href='/'" class="btn btn-danger ms-5">Exit</button>
</form>
