@model CampusLink_Application.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 col-md-6">
        <h2 class="text-center text-warning mb-4">Edit Student Details</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3 text-center">
                <label asp-for="ProfileImage" class="form-label">Profile Picture</label>



                <input asp-for="ProfileImage" type="file" class="form-control mt-2 " accept="image/*" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />

            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">-- Select --</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label">Age</label>
                <input asp-for="Age" class="form-control" type="number" />
            </div>

            <div class="mb-3">
                <label asp-for="EmailAdress" class="form-label">Email Address</label>
                <input asp-for="EmailAdress" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="RegNo" class="form-label">Registration Number</label>
                <input asp-for="RegNo" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="BirthDate" class="form-label">Date Of Birth</label>
                <input asp-for="BirthDate" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="CourseId">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(ViewBag.Courses, "CourseId", "CourseName", Model.CourseId))">
                    <option value="">-- Select Course --</option>
                    
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id">Department</label>
                <select asp-for="Id" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "Id", "DepartmentName", Model.Id))">
                    <option value="">-- Select Department --</option>

                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Update</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
