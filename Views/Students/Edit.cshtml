@model CampusLink_Application.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 col-md-6">
        <h2 class="text-center text-warning mb-4">Edit Student Details</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3 text-center">
                <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>

                @* Show current picture if one exists *@
                @if (!string.IsNullOrEmpty(Model.ProfileImage))
                {
                    <img src="@Url.Content(Model.ProfileImage)" alt="Current Profile Picture"
                          />
                }
                else
                {
                    <p class="text-muted">No profile picture uploaded.</p>
                }

                <input asp-for="ProfilePicture" type="file" class="form-control mt-2 img-thumbnail mb-2" style="width: 150px; height: 150px; object-fit: cover;" accept="image/*" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">-- Select --</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label">Age</label>
                <input asp-for="Age" class="form-control" type="number" />
            </div>

            <div class="mb-3">
                <label asp-for="EmailAdress" class="form-label">Email Address</label>
                <input asp-for="EmailAdress" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="RegNo" class="form-label">Registration Number</label>
                <input asp-for="RegNo" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="BirthDate" class="form-label">Date Of Birth</label>
                <input asp-for="BirthDate" class="form-control" type="date" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Update</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
